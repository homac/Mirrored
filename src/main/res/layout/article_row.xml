<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:orientation="vertical">

  <TextView
     android:id="@+id/article_headline"
     android:layout_width="match_parent"
     android:gravity="center_vertical"
     android:layout_height="wrap_content"
     android:paddingTop="2dip"
     android:paddingBottom="2dip"
     android:paddingLeft="0dip"
     android:paddingRight="0dip"
     android:textStyle="bold"
     android:textSize="18sp"
     android:text="Example headline for layout foobar herp derp a little more"
     />

  <TextView
     android:id="@+id/article_date"
     android:layout_width="match_parent"
     android:gravity="right"
     android:layout_height="wrap_content"
     android:paddingTop="0dip"
     android:paddingBottom="0dip"
     android:paddingLeft="0dip"
     android:paddingRight="0dip"
     android:textStyle="bold"
     android:textSize="10sp"
     android:textColor="#C3C3C3"
     android:text="Jan 24, 2014 5:34 PM"
     />

  <TextView
     android:id="@+id/article_description"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:paddingTop="2dip"
     android:paddingBottom="2dip"
     android:paddingLeft="0dip"
     android:paddingRight="0dip"
     android:text="Example text for layout bla blub foobar Example text for layout bla blub foobar Example text for layout bla blub foobar Example text for layout bla blub foobar Example text for layout bla blub foobar bla blub foobar bla blub foobar bla blub foobar bla blub foobar"
     android:drawableLeft="@drawable/mirrored"
     android:drawablePadding="4dip"
     android:textSize="14sp"/>

</LinearLayout>
